<script type="text/javascript" charset="utf-8">
	$(function() {
	  var faye = new Faye.Client('<%= faye_path %>');
	  faye.subscribe('/messages/new', function (data) {
	    eval(data);
	  });
	});
</script>
<div class='row-fluid'>
	<div class='hero-unit'>
		<h1>Sorry.</h1>
		<p>This site is undergoing maintenance.</p>
	</div>
</div>
<div class='row-fluid'>
	<div class='span4'>
		<% @maintenance_events.each do |maintenance_event| %>
			<%= erb :maintenance_event, :locals => {:maintenance_event => maintenance_event} %>
		<% end %>
	</div>
	<div class='span8'>
		<h3>Live Updates</h3>
		<div id='updates'>
			<% @updates.each do |update| %>
				<%= erb :update, :locals => {:update => update} %>
			<% end %>
		</div>
	</div>
</div>